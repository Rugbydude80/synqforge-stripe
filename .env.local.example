NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Demo-friendly defaults (leave blank to enable Demo Mode)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Toggle Freelancer Mode (solo workflows)
NEXT_PUBLIC_FREELANCER_MODE=true

# Get these from Stripe dashboard
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Disable billing when true (safe default for local/demo)
DISABLE_BILLING=true

# AI and caching configuration
# API key for OpenRouter (used for AI story generation)
OPENROUTER_API_KEY=

# Upstash Redis configuration for caching and rate limiting
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Realtime presence (optional)
ABLY_API_KEY=

# Observability (optional)
SENTRY_DSN=
